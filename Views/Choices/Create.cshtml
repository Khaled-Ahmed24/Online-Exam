@model Online_Exam1._0.Models.Choices

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Choices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Choice_text" class="control-label"></label>
                <input asp-for="Choice_text" class="form-control" />
                <span asp-validation-for="Choice_text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Is_correct" /> @Html.DisplayNameFor(model => model.Is_correct)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <form asp-controller="Question" asp-action="Finish">
            <div class="form-group">
                <input type="submit" value="Finish" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
