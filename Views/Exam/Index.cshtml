
@model List<Online_Exam1._0.Models.Exam>

@{
    ViewData["Title"] = "Index";
}

<h2>My Exams</h2>

<table class="table">
    <!-- Table header -->
    <thead>
        <tr>
            <th>Exam ID</th>
            <th>Title</th>
            <th>Description</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <!-- Table body -->
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Exam_id</td>
                <td>@exam.Exam_title</td>
                <td>@exam.Description</td>
                <!-- Add other columns as needed -->
            </tr>
        }
    </tbody>
</table>

<!-- Button to navigate to the Create Exam page -->
<a asp-action="Create" class="btn btn-primary">Create Exam</a>
